<div class="container">
  <div class="reveal">
    <div class="slides">

      <section id="video" class="contenitore-video">
        <iframe width="720" height="560" src="//www.youtube.com/embed/{{ videoid }}" frameborder="0" allowfullscreen></iframe>
      </section>

      <section class="informazioni invisible">
        <h1>{{ titolo }}</h1>
        <ul>
          <li>{{ url }}</li>
          <li>{{ url_assoluto }}</li>
          <li>{{ descrizione }}</li>
        </ul>
        <fb:like href="{{ url_assoluto }}" send="false" width="450" show_faces="true"></fb:like>
      </section>
            
    </div>
  </div>

  <div class="controlli">
    <span class="play"><img src="/images/play-button.png"></img></span>
    <!-- <span class="info"><img src="/images/info-button.png"></img></span> -->
  </div>

  <a href="#video">Link</a>
</div>
